{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "test:dev": "jest --coverage --watchAll",
    "lint": "eslint . --ext .js",
    "prettier": "prettier --write .",
    "start": "node server.js",
    "dev": "nodemon -L server.js",
    "compose:up": "sh server-dev.sh",
    "compose:down": "docker-compose -f docker-compose-dev.yml down",
    "compose:rmv": "docker-compose -f docker-compose-dev.yml rm -v"
  },
  "engines": {
    "node": "15.x"
  },
  "author": "Türkay Tunç",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.5.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "util/**/*.js",
      "!server/server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  },
  "devDependencies": {
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  }
}
